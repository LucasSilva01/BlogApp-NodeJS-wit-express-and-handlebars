<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class= "btn btn-success">Nova categoria</button></a>


{{#each categorias}}

<div class="conteiner mt-2">
    <div class="card">
        <div class = "card-body">
            <h4>{{nome}}</h4>
            <small>Produtor: {{slug}}</small>
            <hr>
            <small>Data de criação: {{date}}</small>
            <a href="/admin/categorias/edit/{{_id}}"<button class="btn btn-success mt-4">Editar categorias</button></a>
            <form action="/admin/categorias/delete" method="post">
                <input type="hidden" name = "id" value={{_id}}>
                <button type="submit" class="btn btn-danger mt-2" >Delete</button>
            </form>
        </div>
    </div>
</div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada.</h4>
{{/each}}